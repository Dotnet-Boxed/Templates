<Project Sdk="Microsoft.NET.Sdk">
  <!--#if (AuthoringMode)-->
  <PropertyGroup>
    <!-- Modify these constants to enable/disable a feature to debug the template. Note that this only affects the C#. -->
    <DefineConstants>$(DefineConstants);TLS</DefineConstants>
    <!-- Workaround to build this project: https://github.com/dotnet/templating/issues/1438 -->
    <TLS>true</TLS>
  </PropertyGroup>
  <!--#endif-->

  <PropertyGroup Label="Build">
    <TargetFramework>net7.0</TargetFramework>
    <OutputType>Exe</OutputType>
  </PropertyGroup>

  <ItemGroup Label="Package References">
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="7.0.1" />
    <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="7.0.0" />
    <PackageReference Include="Microsoft.Orleans.BroadcastChannel" Version="7.2.7" />
    <PackageReference Include="Microsoft.Orleans.Client" Version="7.2.7" />
    <PackageReference Include="Microsoft.Orleans.Streaming" Version="7.2.7" />
    <PackageReference Include="Microsoft.Orleans.Clustering.AzureStorage" Version="7.2.7" />
    <PackageReference Include="Microsoft.Orleans.Connections.Security" Version="7.2.7" Condition="'$(TLS)' == 'true'" />
  </ItemGroup>

  <ItemGroup Label="Project References">
    <ProjectReference Include="..\OrleansTemplate.Abstractions\OrleansTemplate.Abstractions.csproj" />
  </ItemGroup>

</Project>
